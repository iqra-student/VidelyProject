@model WebApplication3.Models.NewRentalViewModel

@{
    ViewData["Title"] = "New Rental";
}

<h2 class="text-teal mb-4 mt-4">New Rental Form</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

<form asp-action="New" method="post">
    <div class="form-group mb-3">
        <label>Customer Name</label>
        <input asp-for="CustomerName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Movie Name</label>
        <input asp-for="MovieName" class="form-control" />
    </div>

    <button type="submit" class="btn" style="background:#008080; color:white;">Rent Movie</button>
</form>

<style>
    .text-teal {
        color: #008080;
    }

    .form-control {
        border-radius: 8px;
    }

    button.btn {
        border-radius: 8px;
        padding: 10px 20px;
    }
</style>
